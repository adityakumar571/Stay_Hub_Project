<% layout("/layouts/boilerplate") %>
<style>
  #filter {
    display: flex;
    flex-wrap: wrap; /* Adjusted for better wrapping of items */
    align-items: center;
    justify-content: center; /* Centers the filter items horizontally */
    padding: 0.1rem;
  }

  .filter {
    text-align: center;
    margin-top: 0.8rem;
    opacity: 0.7;
    flex: 1 1 120px; /* Makes each filter take up equal space but not less than 120px */
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-Info {
    display: none;
  }

  .tax-togle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.2rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: 1rem; /* Adjusted margin */
    margin-top: 1rem; /* Added top margin for spacing */
  }

  /* Media query for small screens (mobile devices) */
  @media (max-width: 576px) {
    #filter {
      flex-direction: column; /* Stacks the filters vertically on small screens */
      gap: 1rem;
    }

    .tax-togle {
      margin-left: 0;
      margin-top: 1rem; /* Adds margin for better spacing */
    }

    .filter p {
      font-size: 0.9rem; /* Increases font size for readability */
    }
  }

  /* Media query for medium screens (tablets) */
  @media (max-width: 768px) {
    #filter {
      flex-direction: row;
      gap: 1rem;
    }

    .filter p {
      font-size: 0.9rem; /* Adjusts font size for better readability */
    }

    .tax-togle {
      margin-left: 1rem; /* Adds some margin for alignment */
    }
  }

  /* Media query for large screens (desktops) */
  @media (min-width: 992px) {
    .filter {
      flex: 1 1 180px; /* Adjusts flex-basis to ensure items take up more space on large screens */
    }
  }
</style>

<div id="filter">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountain House</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i>
      <i class="fa-solid fa-water"></i>
    </div>
    <p>Beach</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-gopuram"></i></div>
    <p>Temples</p>
  </div>

  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>

  <div class="tax-togle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%=listing._id%>" class="listing-link"> <!-- Move the opening anchor tag inside the loop -->
      <div class="listing-card card col">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %> <br /></b>
            <% if (typeof listing.price === 'number' && !isNaN(listing.price)) { %>
              &#8377;<%= listing.price.toLocaleString("en-IN") %>/night 
              <i class="tax-Info"> &nbsp; &nbsp;+18% GST</i>
            <% } else { %>
              Price not available
            <% } %>
          </p>
        </div>
      </div>
    </a> <!-- Move the closing anchor tag inside the loop -->
  <% } %>
</div>

